<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/billtime" />


    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/edDateFrom"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:ems="20"
            android:enabled="false"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imgCalendarFrom"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_toRightOf="@id/edDateFrom"
            android:paddingBottom="4dp"
            android:src="@drawable/calendar" />

        <EditText
            android:id="@+id/edDateTo"
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="40dp"
            android:ems="20"
            android:enabled="false"
            android:textAlignment="center" />

        <ImageView
            android:id="@+id/imgCalendarTo"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignBottom="@id/edDateTo"
            android:layout_toRightOf="@id/edDateFrom"
            android:paddingBottom="4dp"
            android:src="@drawable/calendar" />

        <Button
            android:id="@+id/btnTimTKDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/imgCalendarFrom"
            android:text="TÃ¬m" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvTongDoanhThuTheoKhoangThoiGian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvTimHoaDonTheoKhoangThoiGian"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>