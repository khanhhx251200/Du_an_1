<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/maugiay" />

        <ImageView
            android:id="@+id/imgDeleteMauGiay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close" />

        <LinearLayout
            android:id="@+id/lnPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-15dp"
            android:layout_toRightOf="@id/img"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="Tên mẫu giày: "
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Mã mẫu giày: "
                android:textSize="12dp" />




        </LinearLayout>

        <LinearLayout
            android:id="@+id/textview"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lnPreview"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTenMauGiay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="01 "
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMaMaugiay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="02"
                android:textSize="12dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/index"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/imgDeleteMauGiay"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvSoLuongMG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:layout_marginTop="24dp"
            android:layout_toLeftOf="@id/imgDeleteMauGiay"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvGiaban"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:text="100k"
                android:textSize="12dp" />
        </LinearLayout>



    </RelativeLayout>
</LinearLayout>