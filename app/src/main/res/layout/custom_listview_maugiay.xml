<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/maugiay" />

        <ImageView
            android:id="@+id/imgDeleteMauGiay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_close" />

        <LinearLayout
            android:id="@+id/lnPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-15dp"
            android:layout_toRightOf="@id/img"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="Mã mẫu giày: "
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Mã hãng giày: "
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên mẫu giày: "
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/textview"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lnPreview"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvMaMauGiay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="01 "
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMaHangGiayspn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="16dp"
                android:text="02"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvTenMauGiay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adidas"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/index"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/imgDeleteMauGiay"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Số lượng: "
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSoLuongMG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="1"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@id/imgDeleteMauGiay"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Màu sắc: "
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMauSac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="16dp"
                android:text="Đen"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="195dp"
            android:layout_height="45dp"
            android:layout_marginLeft="248dp"
            android:layout_marginTop="67dp"
            android:orientation="horizontal"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Giá bán: "
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvGiaBan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="16dp"
                android:text="100.000"
                android:textSize="16dp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>